{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="row">
    {{#with main}}
        <main>
            <div class="col-6">
              {{>title data="work history" big=true}}
<div class="alert alert-warning mb-2">
                {{#each works}}
                    
                     <div class="alert alert-title text-bg-danger">{{position}}</div>
                     <hr>
                       <div>{{duration.from}} -                       
                        {{#if duration.to}} 
                        {{duration.to}} 
                        {{else}} (Працюю досі)</div>
                         {{/if}}
                         <button class="btn btn-warning m-2">{{#if company.url}}
                        {{>link text=company.name href=company.url blank=true noLine=true}}</button>
                        {{else}}
                        <b>{{company.name}}</b>
                        {{/if}}</button>
 </div>
 </div>

        
             <div class="col-6">
                
               <div class="alert alert-success mb-2">
                   <div class="alert alert-title text-bg-secondary"><strong>Projects ({{projectAmount}})</strong> </div>
                     <hr>
                    
                        {{#each projects}}
                 <button class="btn btn-light" href="{{url}}">{{name}}</button><br>
                         
   <label class="form-label">{{about}} ({{stackAmount}})</label>
 {{#each stacks}}
  <div class="form-check"> 
       <label class="form-check-label"> <em>{{name}}</em></label>
          <input name="food" type="checkbox" class="form-check-input">
                           {{/each}}
                    
                         <em>Project awards ({{awardAmount}})</em>
                           <div class="card">
  <div class="card-body">
                            <h4>{{#each awards}} </h4>
                            {{name}} 
                            {{/each}}  {{/each}}
                             {{/each}}
                            </div>
                           </div>
                           
                             </div>
                           </div>
       </div>
                 
        </section>
       </main>
       
    {{/with}}
</div>

