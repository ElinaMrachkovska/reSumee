{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
        <section>
{{>title data="work history" big=true}}
            <div>
                <ul>
                  {{#each works}}
                    <li>
                      <div>{{position}}</div>
                      <br>

                      <div>{{duration.from}} -                        - 
                        {{#if duration.to}} 
                        {{duration.to}} 
                        {{else}} (працюю досі)
                         {{/if}}
                         </div>

                         <div> {{#if company.url}}
                        {{>link text=company.name href=company.url blank=true noLine=true}}
                        {{else}}
                        <b>{{company.name}}</b>
                        {{/if}}
                        </div>
                      <br>
                      <div><strong>Projects({{projectAmount}})</strong> </div>
                   
                    <br>
                    <ul>
                        {{#each projects}}
                        <li> 
                          <div>{{name}}</div>
                         <div>{{> link text=name href=url blank=true noline=true}}</div>
                          <br> 
                          <p>{{about}}</p>
                          <br>
                        {{/each}}
                       
                    <br>
                         <em>Project stacks</em>
                         ({{stackAmount}})
                         {{#each stacks}} <br>
                           {{name}}
                           {{/each}}
                           
                            <em>Project awards</em>
                           ({{awardAmount}})
                            {{#each awards}} 
                            {{name}} <br>
                            {{/each}}
                                                     </li>
                         </ul>
                         
                        </div>
                        </li>
                        
            {{/each}}
                  </ul>
        </section>
       </main>
       
    {{/with}}
</div>

