


<div class="card mb-5 p-2">
    {{#with navigation}}
    <div class="nav">
        {{#each links}}
        <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{href}}">{{text}}</a>
        {{/each}}
    </div>
    {{/with}}
</div>


<div class=" mb-3">
    <div class=" pb-5">
        <h1>{{header}}</h1>
     {{#with contacts_data}}
    <div class="col-8 mb-3">
        <h2 class="mb-4">{{title}}</h2>
        <div class="form-label">
            <div class="row mt-4">
                {{#with buttons}}
                <div class="col-4 mb-3">
                    <div class="btn btn-warning form-control">Я новий покупець</div>
                </div>
                <div class="col-4">
                    <div class="btn btn-outline-warning form-control">Я постійний покупець</div>
                </div>
                {{/with}}
            </div>
        </div>
    </div>

<div class="col-8">
    <div class="row">
             {{#with form}}
              
                {{#each input}}
                <div class="col-6 gy-2">  
                     <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder={{placeholder}} type="text">
                    <div class="form-text"> {{caption}}</div>
                </div>
                {{/each}}
             
               
 <hr class="my-4">


         <div class="col-8">
           <div class="row">
             {{#each switch}}
            <div class="form-check form-switch {{#if @first}} mb-3{{/if}}">
                <input class="form-check-input" type="checkbox" {{#if isActive}} checked {{/if}}>
                <label class="form-check-label"> {{text}}</label>
            </div>
            {{/each}}
        </div>
       </div>
    {{/with}}
    </div>
</div>

<hr class="col-8 my-4">

<div class="card">
    {{#each action_block}}
    <button
        class="btn d-flex my-1 {{#if isPrimary}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info text-light{{/if}}">
        {{text}}
    </button>
    {{/each}}
</div>



<hr class=" my-4">
  <div class="row">
<div class="col-4 mt-1">
    {{#with total}}
    <div class="card p-2">
        <h2>{{title}}</h2>
        {{#each item_list}}
        <div class="mb-1">{{name}}: {{price}}</div>
        {{/each}}
</div>


        <hr class=" my-2">

        {{#each additional_info}}
        <div class="mb-1">{{text}}: {{value}}</div>
        {{/each}}

        <hr class=" my-2">
        {{#with total_price}}
        <div class="mb-1">{{text}}: {{value}}</div>
        {{/with}}

        <hr class=" my-2">

        {{#with button}}
        <div class="btn btn-primary form-control mt-1">Підтвердити замовлення</div>
        <div class="btn btn-outline-primary form-control my-2">Я постійний покупець</div>
        {{/with}}
    </div>
    {{/with}}
</div>
    </div>



<div class="row-3">
    {{#with delivery}}
      <h2>{{title}}</h2>
        <div class="col-8 card p-3">
            {{#each select}}
            <div class="col-4 px-2">
                <label class="form-label">{{label}}</label>
                <select class="form-select">
                    <option selected> {{placeholder}} </option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>


        <div class="mt-2">
            {{#each delivery_type}}

            <div class="form-check">
                <label class="form-check-label">{{type}}</label>
                <input  type="radio" class="form-check-input">

            </div>
            {{/each}}
        </div>

        <hr>

        <div class="mt-2">
            {{#each payment}}
            <label class="form-label">
                <h2>{{title}}</h2>
            </label>
            <div class="form-check">
                <label class="form-check-label">{{type}}</label>
                <input  type="radio" class="form-check-input">
                <div class="form-text text-sm"> {{description}}</div>
            </div>
            {{/each}}
        </div>

        <hr>
        <div class="row">
            <div class="col-8">
                {{#with contact}}

                <div>
                    <h2>{{title}}</h2>
                    <div class="col-4 g-2">
                        {{#with surname}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}} type="text">
                        <div class="form-text"> {{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-4 g-2">
                        {{#with name}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}} type="text">
                        <div class="form-text"> {{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-4 g-2">
                        {{#with phone}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}} type="tel">
                        <div class="form-text"> {{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-4 g-2">
                        {{#with email}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}} type="email">
                        <div class="form-text"> {{caption}}</div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}

            </div>

        </div>



        <hr class="my-4">

        <div class="col-8 g-2">
            {{#with coment}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder={{placeholder}} type="text">
            {{/with}}
        </div>
        {{/with}}
    </div>


<div class="mb-1">
    {{#with coupon}}
    <h2>{{title}}</h2>
    {{#with select}}
    <div class="mb-3">
        {{#with availabel_coupon}}
        <label class="form-label">{{label}}</label>
        <select class="form-select form-select-lg">
            <option selected> {{placeholder}} </option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
        </select>
        {{/with}}
    </div>

    <div class="mb-3">
        {{#with friend_coupon}}
        <label class="form-label">{{label}}</label>
        <select class="form-select form-select-sm">
            <option selected> {{placeholder}} </option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
        </select>
        {{/with}}
    </div>
    {{/with}}

    {{#with add}}
    <div class="mb-3">
        {{#with friend}}
        <label class="form-label">{{label}}</label>
        <input class="form-control form-control-lg" placeholder="{{placeholder}}">
        <div class="form-text"> {{caption}}</div>
        {{/with}}
    </div>

    <div class="mb-3">
        {{#with colleague}}
        <label class="form-label">{{label}}</label>
        <input class="form-control form-control-sm" placeholder={{placeholder}}>
        <div class="form-text"> {{caption}}</div>
        {{/with}}
    </div>
    {{/with}}
   {{/with}}
 </div>
   {{/with}}
   </div>
<hr class="my-4">

<div class="mb-3">
    {{#with quiz}}
    <h2 class="mb-3">{{title}}</h2>
    {{#with preference}}
    <p>{{title}}</p>
    {{#each options}}
    <div class="form-check">
        <label class="form-label">{{this}}</label>
        <input name="n" type="radio" class="form-check-input">
    </div>{{/each}}
    {{/with}}


<div class="mb-3">
    {{#with your_expirience}}
    <label class="form-label">{{label}}</label>
    <input class="form-control form-control-sm" placeholder={{label}}>
    {{/with}}
</div>

<div class="mb-3">
    {{#with purchase_frequency}}
    <label class="form-label">{{label}}</label>
    <select class="form-select form-select-sm">
        <option selected> {{placeholder}} </option>
        {{#each options}}
        <option value="{{value}}">{{text}}</option>
        {{/each}}
    </select>
    {{/with}}
</div>

<div class="mb-3">
    {{#with factors}}
    <label class="form-label">{{title}}</label>
    {{#each options}}
    <div class="form-check">
        <label class="form-check-label">{{this}}</label>
        <input type="checkbox" class="form-check-input">
    </div>
    {{/each}}
    {{/with}}
</div>
{{/with}}
</div>
 
<hr class="my-4">

<div class="row gx-5">
    {{#each footer}}
    <div class="nav col-2">
        
            {{#each this}}
            <div>
                <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
            </div>
            {{/each}}
          
    </div>
    {{/each}}
    
</div>

